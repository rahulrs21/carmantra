rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public website leads
    match /crm-leads/{document=**} {
      allow read: if true;
      allow write: if true;
    }

    // User roles (self-read only)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // Optional legacy support
    match /user/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // Helper: is this user an admin according to users/{uid}.role
    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper: is user authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Quotations: allow admin OR the document owner (ownerId field) to read.
    // Allow create if authenticated and ownerId in the incoming resource matches.
    // Allow update/delete to admin or document owner.
    match /quotations/{docId} {
      allow read: if isAdmin() || (request.auth != null && resource.data.ownerId == request.auth.uid);
      allow create: if request.auth != null && (isAdmin() || request.auth.uid == request.resource.data.ownerId);
      allow update, delete: if isAdmin() || (request.auth != null && resource.data.ownerId == request.auth.uid);
    }

    // Invoices: similar owner/admin model
    match /invoices/{docId} {
      allow read: if isAdmin() || (request.auth != null && resource.data.ownerId == request.auth.uid);
      allow create: if request.auth != null && (isAdmin() || request.auth.uid == request.resource.data.ownerId);
      allow update, delete: if isAdmin() || (request.auth != null && resource.data.ownerId == request.auth.uid);
    }

    // Sent forms: admin-only for now
    match /sentForms/{docId} {
      allow read, write: if isAdmin();
    }

    // B2B Collections: authenticated users (no admin role required for now)
    // Companies collection with all subcollections
    match /companies/{companyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
      
      // Services subcollection
      match /services/{serviceId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update: if isAuthenticated();
        allow delete: if isAuthenticated();
        
        // Vehicles subcollection
        match /vehicles/{vehicleId} {
          allow read: if isAuthenticated();
          allow create: if isAuthenticated();
          allow update: if isAuthenticated();
          allow delete: if isAuthenticated();
          
          // Pre-inspections subcollection
          match /preInspections/{inspectionId} {
            allow read: if isAuthenticated();
            allow create: if isAuthenticated();
            allow update: if isAuthenticated();
            allow delete: if isAuthenticated();
          }
        }
        
        // Referrals subcollection
        match /referrals/{referralId} {
          allow read: if isAuthenticated();
          allow create: if isAuthenticated();
          allow update: if isAuthenticated();
          allow delete: if isAuthenticated();
        }
      }
    }

    // Legacy B2B collections (deprecated - kept for backward compatibility)
    match /b2b-companies/{docId=**} {
      allow read, write: if isAuthenticated();
    }

    match /b2b-vehicles/{docId=**} {
      allow read, write: if isAuthenticated();
    }

    match /b2b-services/{docId=**} {
      allow read, write: if isAuthenticated();
    }
  }
}

